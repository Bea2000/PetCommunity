<br>
<h2 style="margin-left:20px" class='is-size-2'>Iniciar Sesión</h2>
<br>
<br>

<div style="margin-left:20px">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if flash[:alert] %>
      <div class="notification is-danger" style="width: 30%">
        <%= flash[:alert]%>
      </div>
    <% end %>
  <div class="field">
      <label class="label is-size-4 has-text-weight-light">Email</label>
      <div class="control" style="padding-right: 70%">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>
    </div>
    <br>
  <div class="field">
      <label class="label is-size-4 has-text-weight-light">Contraseña</label>
      <div class="control" style="padding-right: 70%">
          <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
      </div>
    </div>
    <br>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Recordar_sesión %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Ingresar",  class: "button is-link"%>
  </div>
<% end %>
</div>

<%= render "users/shared/links" %>
