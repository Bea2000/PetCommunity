<br>
<h1 class='is-size-2' style="margin-left: 20px">Editar comentario</h1>
<br>
<br>

<div style="margin-left:20px">
<%= form_with(model: @comment, method: :patch, url: comments_update_path, local: true) do |form| %>
    <%- if @comment.errors.any? %>
        <div class="notification is-danger" style="width: 30%">
            Algo ha salido mal!
        </div>
    <% end %>
    <div class="field">
        <label class="label is-size-4 has-text-weight-light">Comentario</label>
        <div class="control" style="padding-right: 70%">
            <%= form.text_field :description, class: "input" %>
        </div>
    </div>
    <%- if @comment.errors[:description].any?%>
    <div class= "help is-danger">
        <%= @comment.errors[:description].first %>
    </div>
    <% end %>
    <br>
    <div class="control">
        <div class="action">
            <%= form.submit "Guardar Comentario", class: "button is-link" %>
        </div>
    </div>
<% end %>
</div>

<button class="button is-rounded" style="margin-top: 20px; margin-left: 20px"><%= link_to 'Volver', publications_show_path(@comment.publication_id) %></button>