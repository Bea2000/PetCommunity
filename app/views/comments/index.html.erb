<br>
<h1 style="margin-left: 20px" class='is-size-2'>Comentarios</h1>

<% if notice %>
    <div class="notification is-success" style= "width:30%; margin-left: 1%;text-align: center;">
        <%= notice %>
    </div>
<% end %>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Publicaci√≥n</th>
                <th>Usuario</th>
                <th>Comentario</th>
                <th colspan="3">Acciones</th>
            </tr>
        </thead>

        <tbody>
            <% @comments.each do |comment| %>
                <tr>
                    <td><%= comment.publication_id %></td>
                    <td><%= comment.user_id %></td>
                    <td><%= comment.description %></td>
                    <td><%= link_to 'Ver detalle', comments_show_path(comment.id)%></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<button class="button is-rounded" style="margin-top: 20px; margin-left: 20px"><%= link_to 'Crear nuevo comentario', comments_new_path %></button>